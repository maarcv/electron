<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Permet compilació JIT de V8 (imprescindible per Chromium/Electron) -->
  <key>com.apple.security.cs.allow-jit</key><true/>

  <!-- Permet ús de memòria executable no signada (necessari per V8 i WebAssembly) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key><true/>

  <!-- Permet carregar llibreries natives que no hagin estat validades prèviament -->
  <key>com.apple.security.cs.disable-library-validation</key><true/>

</dict>
</plist>
