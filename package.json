{
  "name": "BianchiniTerminals",
  "version": "1.0.0",
  "description": "WebApp per controlar els terminals de Bianchini",
  "main": "main.js",
  "scripts": {
    "dist-mac": "CSC_NAME='Apple Development: marc.vilardebo@glamsw.com (2RTRV444HT)' electron-builder -m",
    "dist-win": "electron-builder -w nsis",
    "start": "electron .",
    "test": "\"echo \\\"Error: no test specified\\\" && exit 1\""
  },
  "build": {
    "appId": "com.glamsw.bianchini.terminals",
    "extraResources": [
          {
            "from": ".env",
            "to": ".env"
          }
        ]
      },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "win": {
          "target": ["nsis", "portable"],
          "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maarcv/electron.git"
  },
  "author": "GlamSoftware",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maarcv/electron/issues"
  },
  "homepage": "https://github.com/maarcv/electron#readme",
  "dependencies": {
      "dotenv": "^16.4.5"
    },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  }
}
